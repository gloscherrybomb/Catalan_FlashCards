# Firebase Configuration
# Copy this file to .env and fill in your Firebase project details

VITE_FIREBASE_API_KEY=your-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef

# The app works in "demo mode" without Firebase configuration
# Progress will be stored in local storage only

# Unsplash API (optional - for flashcard images)
# Get a free key at https://unsplash.com/developers
VITE_UNSPLASH_ACCESS_KEY=your-unsplash-access-key
